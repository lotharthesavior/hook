{
  "name": "lotharthesavior/hook",
  "description": "The Hook System for PHP Apps",
  "keywords": [
    "hook-system",
    "filters-system",
    "hooks",
    "actions",
    "filters"
  ],
  "type": "library",
  "homepage": "http://github.com/lotharthesavior/hook/",
  "license": "GPL-3.0",
  "support": {
    "issues": "https://github.com/lotharthesavior/hook/issues"
  },
  "require": {
    "php": "^8.0|^8.1|^8.2",
    "phpro/grumphp": "^2.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "phpstan/phpstan": "^1.10"
  },
  "autoload": {
    "psr-4": {
      "Hook\\": "src/",
      "tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "phpro/grumphp": true
    }
  }
}
